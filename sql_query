CREATE TABLE orders ( order_id INT PRIMARY KEY AUTO_INCREMENT, -- Unique identifier for each order sushiA VARCHAR(50) NOT NULL, -- Name of the first sushi item sushiB VARCHAR(50) NOT NULL, -- Name of the second sushi item discount_applied FLOAT, -- Percentage discount applied (optional) total_discount DECIMAL(10,2), -- Total discount amount in currency final_price DECIMAL(10,2) NOT NULL, -- Final price of the order after discount order_date DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP );